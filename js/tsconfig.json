{
  "extends": "./tsconfig/tsconfig.base.json",
  "formatCodeOptions": {
    "tabSize": 2,
    "indentSize": 2
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "apache-arrow": ["src/Arrow.node.js"],
      "apache-arrow/*": ["src/*"]
    },
    "allowImportingTsExtensions": true,
  },
  "include": ["bin/**/*.ts", "src/**/*.ts", "test/**/*.ts", "perf/**/*.ts"],
  "ts-node": {
    "swc": true
  }
}
