{
  "extends": "./tsconfig/tsconfig.base.json",
  "formatCodeOptions": {
    "tabSize": 4,
    "indentSize": 4
  },
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "apache-arrow": [
        "src/Arrow.node"
      ],
      "apache-arrow/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "perf/**/*.ts"
  ]
}
