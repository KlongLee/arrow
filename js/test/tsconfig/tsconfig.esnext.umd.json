// TypeScript configuration for the ESNext Closure Compiler target's tests
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "declaration": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "paths": {
      "apache-arrow": [
        "targets/esnext/umd/Arrow"
      ],
      "apache-arrow/*": [
        "targets/esnext/umd/*"
      ]
    }
  }
}
