include "Message.fbs";

namespace org.apache.arrow.flatbuf;

/// ----------------------------------------------------------------------
/// Arrow stream metadata
///
///
/// The format of the stream is:
///   - StreamHeader
///   - Block*
///
/// Block:
///   1. Metadata Length (i32 little endian): Size of 3).
///   2. Body Length (i32 little endian). Size of 4).
///   3. RecordBatch header flatbuffer (no size prefix)
///   4. Data buffers
/// No padding between the 4 elements.

table StreamHeader {
  version: org.apache.arrow.flatbuf.MetadataVersion;

  schema: org.apache.arrow.flatbuf.Schema;

  /// Total number of batches in the stream. -1 to indicate unknown.
  totalBatches: int;

  /// TODO: we can add a flag/length if there are dictionaries.
}

root_type StreamHeader;
